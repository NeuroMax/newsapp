{% extends "base.twig" %}

{% block content %}
    <h1>{{ title }}</h1>
    <small class="text-muted">
        <i class="fas fa-calendar-day mr-1"></i>
        Дата: {{ data.createdAt | date("d/m/Y H:i") }}
    </small>
    <p class="lead mt-3">{{ data.text | raw }}</p>
    <p class="justify-content-center">
        <a href="/admin/edit/{{ data.id }}" class="btn btn-dark">Редактировать</a>
        <a href="/admin/delete/{{ data.id }}" class="btn btn-danger action-delete">Удалить</a>
    </p>
{% endblock %}